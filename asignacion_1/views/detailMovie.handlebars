<div class="col-md-12">
    <div class="row">
        <div class="col-md-3 form-group">
            <div class="row">
                <h1>{{name}}</h1>
            </div>

            <div class="row">
                {{> keywords}}
            </div>
            {{#if compressedImage}}
                <img src="{{compressedImage}}" class="img-responsive">
            {{else}}
                <img src="{{image}}" class="img-responsive">
            {{/if}}
        </div>
    </div>
    <br>
    <div class="row">
        <span class="white-space">{{description}}</span>
    </div>
</div>